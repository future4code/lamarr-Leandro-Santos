{
  "compilerOptions": {
      "target": "es6",            
      "module": "commonjs",      
      "sourceMap": true,        
      "outDir": "./build",        
      "rootDir": "./src",       
      "removeComments": true,   
      "strict": true,
      "esModuleInterop": true,
      "skipDefaultLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "noImplicitAny": true     
  }
}